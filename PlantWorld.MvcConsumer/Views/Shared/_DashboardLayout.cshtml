@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Dashboard</title>
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link rel="icon" type="image/png" href="~/images/icons/Component 2 – 1@2x.jpg" />
</head>
<body>
    <div class="dashboard-container">
        <!-- ✅ سايد بار -->
        <aside class="sidebar">
            <ul>
                <li><a href="/Category/Index">الأقسام</a></li>
                <li><a href="/Product">المنتجات</a></li>
                <li><a href="/Orders">الأوردرات/الطلبات</a></li>
            </ul>
        </aside>

        <!-- ✅ الأليرت -->
        @if (TempData["AlertMessage"] != null)
        {
            <div id="custom-alert" class="custom-alert @TempData["AlertType"]">
                <span>@TempData["AlertMessage"]</span>
            </div>
        }

        <!-- ✅ المحتوى -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ سكريبت الأليرت -->
    <script>
        const alertBox = document.getElementById("custom-alert");
        if (alertBox) {
            setTimeout(() => {
                alertBox.classList.add("show");
            }, 100);

            setTimeout(() => {
                alertBox.classList.remove("show");
            }, 3500);
        }
    </script>

    <style>
        .custom-alert {
            position: fixed;
            top: -80px;
            left: 50%;
            transform: translateX(-50%);
            padding: 15px 25px;
            border-radius: 10px;
            font-weight: 600;
            color: white;
            font-size: 16px;
            z-index: 9999;
            opacity: 0;
            transition: all 0.6s ease;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
        }

            .custom-alert.success {
                background-color: #28a745;
            }

            .custom-alert.danger {
                background-color: #dc3545;
            }

            .custom-alert.show {
                top: 30px;
                opacity: 1;
            }
    </style>

    @RenderSection("Scripts", required: false)
</body>
</html>
