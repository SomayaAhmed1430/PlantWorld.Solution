@model List<PlantWorld.MvcConsumer.Models.OrderDTOs.OrderDTO>

@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Orders";

    (string Text, string Color) GetStatusArabicAndColor(string status)
    {
        return status switch
        {
            "Pending" => ("مُعلق/إنتظار", "orange"),
            "Processing" => ("تجهيز", "blue"),
            "Completed" => ("مكتمل", "green"),
            "Shipped" => ("تم الشحن", "purple"),
            "Delivered" => ("تم التوصيل/ التسليم", "darkgreen"),
            "Cancelled" => ("ملغي", "red"),
            _ => (status, "gray")
        };
    }
}

<h2>الطلبات/الأوردرات</h2>

<br />
<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary">الكل</a>
    <a asp-action="Index" asp-route-status="Pending" class="btn btn-warning">قيد الانتظار</a>
    <a asp-action="Index" asp-route-status="Processing" class="btn btn-success">تجهيز</a>
    <a asp-action="Index" asp-route-status="Completed" class="btn btn-success">مكتمل</a>
    <a asp-action="Index" asp-route-status="Delivered" class="btn btn-success">تم التوصيل/ التسليم</a>
    <a asp-action="Index" asp-route-status="Cancelled" class="btn btn-danger">ملغي</a>
</div>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>رقم الطلب</th>
            <th>الإسم</th>
            <th>الموبايل</th>
            <th>العنوان</th>
            <th>إجمالي المبلغ</th>
            <th>حالة الطلب</th>
            <th>التاريخ</th>
            <th>التفاعلات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Name</td>
                <td>@order.Phone</td>
                <td>@order.City</td>
                <td>@order.TotalAmount</td>

                @* <td>@order.Status</td> *@
                @* <td>
                    @switch (order.Status)
                    {
                        case "Pending":
                            @:مُعلق/إنتظار
                            break;
                        case "Processing":
                            @:تجهيز
                            break;
                        case "Completed":
                            @:مكتمل
                            break;
                        case "Shipped":
                            @:تم الشحن
                            break;
                        case "Delivered":
                            @:تم التوصيل/ التسليم
                            break;
                        case "Cancelled":
                            @:ملغي
                            break;
                        default: @order.Status break;
                    }
                </td> *@
                <td>
                    @{
                        var statusInfo = GetStatusArabicAndColor(order.Status);
                    }
                    <span style="background-color:@statusInfo.Color; color:white; font-weight:bold; padding:2px 5px; border-radius:4px;">
                        @statusInfo.Text
                    </span>
                </td>


                <td>@order.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary"> Details </a>
                </td>
            </tr>
        }
    </tbody>
</table>
